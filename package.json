{
  "name": "chromecast-receiver",
  "version": "1.0.0",
  "description": "Chromecast receiver app",
  "license": "ISC",
  "author": "",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "dev:open": "vite --open",
    "preview": "vite preview",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:verbose": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose",
    "deploy": "npm run build && git add dist/ src/ index.html vite.config.ts && git commit -m 'Deploy updates' && git push origin main",
    "android:build": "cd android-app && ./gradlew assembleDebug",
    "android:install": "adb install -r android-app/app/build/outputs/apk/debug/app-debug.apk",
    "android:deploy": "npm run android:build && npm run android:install",
    "android:devices": "adb devices",
    "android:logcat": "adb logcat -s chromium:V WebView:V",
    "android:uninstall": "adb uninstall com.bounce.app"
  },
  "dependencies": {
    "matter-js": "^0.19.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/matter-js": "^0.19.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^24.0.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3",
    "vite": "^7.1.12",
    "vite-plugin-singlefile": "^2.3.0"
  }
}
